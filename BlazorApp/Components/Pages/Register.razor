@page "/register"
@using DBL
@using Models
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage MySession
@inject NavigationManager nav

<div class="register-container">
    <div class="card">
        <h2 class="logo">🐾 PawMatch</h2>
        <h3>Create a new account</h3>

        <input type="text" @bind="customer.FirstName" placeholder="First Name" class="input" />
        <input type="text" @bind="customer.LastName" placeholder="Last Name" class="input" />
        <input type="text" @bind="customer.Email" placeholder="Email" class="input" />
        <input type="text" @bind="customer.Phone" placeholder="Phone" class="input" />
        <input type="password" @bind="customer.Password" placeholder="Password" class="input" />
        <button class="btn" @onclick="RegisterUser">Register</button>

        <p class="switch-text">
            Already have an account? <a href="/login">Login</a>
        </p>

        <p class="error">@message</p>
    </div>
</div>

@code {
    Customer customer = new Customer();
    CustomerDB db = new CustomerDB();
    string message = "";

    private async Task RegisterUser()
    {
        if (string.IsNullOrWhiteSpace(customer.FirstName) ||
            string.IsNullOrWhiteSpace(customer.LastName) ||
            string.IsNullOrWhiteSpace(customer.Email) ||
            string.IsNullOrWhiteSpace(customer.Password))
        {
            message = "Please fill in all fields.";
            return;
        }

        await db.InsertGetObjAsync(customer);
        await MySession.SetAsync("customer", customer);
        nav.NavigateTo("/myaccount");
    }
}


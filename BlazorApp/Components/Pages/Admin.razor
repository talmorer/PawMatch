@page "/admin"
@using DBL
@using Models
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage MySession
@inject NavigationManager nav
@inject IJSRuntime js

<div class="admin-container">
    <div class="card">
        <h2 class="logo">🐾 PawMatch</h2>
        <h3>Admin Dashboard</h3>

        <button class="btn back" @onclick="@(() => nav.NavigateTo("/myaccount"))">⬅ Back to My Account</button>

        @if (admin == null)
        {
            <p>Loading...</p>
        }
        else if (admin.IsAdmin == false)
        {
            <p>❌ Access denied. You are not an admin.</p>
        }
        else
        {
            <p>Welcome back, @admin.FirstName 👋</p>

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="@messageClass">@message</div>
            }

            @if (users == null)
            {
                <p>Loading users...</p>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Admin</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in users)
                        {
                            <tr>
                                <td>@u.UserID</td>
                                <td>@u.FirstName @u.LastName</td>
                                <td>@u.Email</td>
                                <td>@u.Phone</td>
                                <td>@(u.IsAdmin ? "Yes" : "No")</td>
                                <td>
                                    @if (u.IsAdmin == false)
                                    {
                                        <button class="btn delete" @onclick="() => DeleteUser(u)">Delete</button>
                                    }
                                    else
                                    {
                                        <span style="color:gray;">(Admin)</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
    </div>
</div>

@code {
    Customer admin;
    List<Customer> users = new();
    string message = "";
    string messageClass = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var session = await MySession.GetAsync<Customer>("customer");
            if (session.Success && session.Value != null)
            {
                admin = session.Value;
                if (admin.IsAdmin)
                {
                    CustomerDB db = new CustomerDB();
                    users = await db.GetAllAsync();
                    StateHasChanged();
                }
                else
                {
                    nav.NavigateTo("/myaccount");
                }
            }
            else
            {
                nav.NavigateTo("/login");
            }
        }
    }

    async Task DeleteUser(Customer user)
    {
        bool confirm = await js.InvokeAsync<bool>("confirm", $"Are you sure you want to delete {user.FirstName} {user.LastName}?");
        if (!confirm)
            return;

        CustomerDB db = new CustomerDB();
        int result = await db.DeleteAsync(user);

        if (result > 0)
        {
            users.Remove(user);
            message = $"✅ {user.FirstName} {user.LastName} was deleted successfully.";
            messageClass = "success-box";
        }
        else
        {
            message = "❌ Delete failed.";
            messageClass = "error-box";
        }
    }
}


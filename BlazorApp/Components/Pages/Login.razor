@page "/login"
@using DBL
@using Models
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage MySession
@inject NavigationManager nav

<div class="login-container">
    <div class="card">
        <h2 class="logo">🐾 PawMatch</h2>
        <h3>Login</h3>

        <EditForm Model="@loginData" OnValidSubmit="CheckLogin">
            <InputText @bind-Value="loginData.Email" placeholder="Email" class="input" />
            <InputText @bind-Value="loginData.Password" placeholder="Password" type="password" class="input" />
            <button class="btn" type="submit">Login</button>
        </EditForm>

        <p class="switch-text">
            Don't have an account? <a href="/register">Register</a>
        </p>

        <p class="error">@message</p>
    </div>
</div>

@code {
    LoginData loginData = new LoginData();
    string message = "";

    async Task CheckLogin()
    {
        CustomerDB db = new CustomerDB();
        Customer found = await db.SelectByEmailAndPasswordAsync(loginData.Email, loginData.Password);

        if (found != null)
        {
            await MySession.SetAsync("customer", found);
                nav.NavigateTo("/myaccount");
        }
        else
        {
            message = "Email or password incorrect.";
        }
    }

    public class LoginData
    {
        public string Email { get; set; }
        public string Password { get; set; }
    }
}


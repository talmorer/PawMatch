@page "/login"
@using DBL
@using Models
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject IServiceProvider ServiceProvider

<div class="login-container">
    <div class="card">
        <h2 class="logo">🐾 PawMatch</h2>
        <h3>Login</h3>

        <input type="text" @bind="loginData.Email" placeholder="Email" class="input" />
        <input type="password" @bind="loginData.Password" placeholder="Password" class="input" />
        <button class="btn" @onclick="CheckLogin">Login</button>

        <p class="switch-text">
            Don't have an account? <a href="/register">Register</a>
        </p>

        <p class="error">@message</p>
    </div>
</div>

@code {
    CustomerDB db = new CustomerDB();
    ProtectedSessionStorage MySession;
    NavigationManager nav;
    LoginData loginData = new LoginData();
    string message = "";

    // initialize services manually
    protected override void OnInitialized()
    {
        nav = (NavigationManager)ServiceProvider.GetService(typeof(NavigationManager));
        MySession = (ProtectedSessionStorage)ServiceProvider.GetService(typeof(ProtectedSessionStorage));
    }

    private async Task CheckLogin()
    {
        if (string.IsNullOrWhiteSpace(loginData.Email) || string.IsNullOrWhiteSpace(loginData.Password))
        {
            message = "Please enter both email and password.";
            return;
        }

        Customer found = await db.SelectByEmailAndPasswordAsync(loginData.Email, loginData.Password);

        if (found != null)
        {
            await MySession.SetAsync("customer", found);
            message = $"✅ Welcome back, {found.FirstName}!";
            await Task.Delay(1000);
            nav.NavigateTo("/myaccount");
        }
        else
        {
            message = "❌ Email or password incorrect.";
        }
    }
}

public class LoginData
{
    public string Email { get; set; }
    public string Password { get; set; }
}

